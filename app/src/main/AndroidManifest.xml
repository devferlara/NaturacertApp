<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="naturacert.baumsoft.dev.naturacert">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".DaoAPP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".iniciorac"
            android:label="@string/title_activity_iniciorac"
            android:screenOrientation="landscape" />
        <activity
            android:name=".recomendaciones"
            android:label="@string/title_activity_recomendaciones"
            android:screenOrientation="landscape" />
        <activity
            android:name=".mis_fincas"
            android:label="@string/title_activity_mis_fincas"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".formularioracindividual"
            android:label="@string/title_activity_formularioracindividual"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".formularioracgrupal"
            android:label="@string/title_activity_formularioracgrupal"
            android:screenOrientation="landscape" />
        <activity
            android:name=".crear_finca_individual"
            android:label="@string/title_activity_crear_finca_individual"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".editar_finca"
            android:label="@string/title_activity_editar_finca" />
        <activity
            android:name=".seleccionar_categoria"
            android:label="@string/title_activity_seleccionar_categoria"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".inicioflor"
            android:label="@string/title_activity_inicioflor"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".formularioflorindividual"
            android:label="@string/title_activity_inicioflor"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
