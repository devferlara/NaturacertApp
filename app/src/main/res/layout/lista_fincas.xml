<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nombre_finca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="Bellavista"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/codigo_finca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RS-M- 123456789"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Bellavista S.A"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fecha_agregado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="04 Jun 2015"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vereda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="07 Jun 2015"
            android:textColor="#000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/entrar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:text="Formulario"
                android:background="@drawable/estilosbotonfincarojo" />

            <Button
                android:id="@+id/ver_finca"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:text="Ver Finca"
                android:background="@drawable/estilosbotonfincaverde"
                android:textColor="#FFF" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
