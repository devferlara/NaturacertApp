<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61B246"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconohome" />
        </LinearLayout>

        <TextView
            android:id="@+id/reporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Lista de Chequeo Norma para Agricultura Sostenible"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ayuda"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconoayuda" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconofoto" />

            <ImageButton
                android:id="@+id/terminar"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconoterminar" />

            <ImageButton
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconodescargar" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:text="Bellavista"
            android:gravity="center_vertical"
            android:textColor="#808080"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/principio_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Principio 1"
                android:textColor="#61B246"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombre_principio_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Sistema de Gestion Social y Ambiental"
                android:textColor="#008748"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diego Fernando Lara"
                    android:textColor="#5B5B5B"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auditor"
                    android:textColor="#028F30"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/thumb" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#FFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/principio1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#ccc"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 1"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 2"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 3"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio4"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 4"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 5"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio6"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 6"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio7"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 7"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio8"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 8"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio9"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 9"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/principio10"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="PRINCIPIO 10"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>




        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp" />

        <naturacert.baumsoft.dev.naturacert.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></android.support.v4.view.ViewPager>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#EFF7EB"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Origen de la información"
            android:textColor="#008748"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMainD"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:text="@string/D"
            android:background="@drawable/estilosbotonformularioorigen"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMainE"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:text="@string/E"
            android:background="@drawable/estilosbotonformularioorigen"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMainO"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:text="@string/O"
            android:textAllCaps="false"
            android:background="@drawable/estilosbotonformularioorigen"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="Agregar Observaciones"
            android:textColor="#008748"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/observaciones"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/observaciones" />

    </LinearLayout>

</LinearLayout>
