<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedorpadre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/estilosbotonredondoformulario"
            android:padding="15dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginRight="63dp">

            <LinearLayout
                android:id="@+id/respuestas_maestras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/titulo_pregunta_maestra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/contenedor_respuestas_maestra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#61B246"></LinearLayout>

                <!-- este es el contenedor de respuestas informativas -->
                <LinearLayout
                    android:id="@+id/contenedor_respuestas_informativas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                </LinearLayout>
                <!-- este es el contenedor de respuestas informativas -->


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#EFF7EB"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Origen de la informaciÃ³n"
            android:textColor="#008748"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMainD"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/estilosbotonformularioorigen"
            android:text="@string/D"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMainE"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/estilosbotonformularioorigen"
            android:layout_margin="10dp"
            android:text="@string/E"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMainO"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/estilosbotonformularioorigen"
            android:text="@string/O"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="Agregar Observaciones"
            android:textColor="#008748"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/observaciones"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/observaciones" />

    </LinearLayout>

</LinearLayout>
